 //coding ninjas

#include <bits/stdc++.h> 
void sortArray(vector<int>& nums, int n)
{
    // Write your code here
                int zero=0,one=0,two=0;
            int i=0;
            for(i=0;i<n;i++)
            {
                if(nums[i]==0)
                {
                    zero++;
                }
                else if(nums[i]==1)
                {
                    one++;
                }
                else 
                {
                    two++;
                }
            }
            nums.clear();
            i=0;
            while(i<zero)
            {
                nums.push_back(0);
                i++;
            }
            i=0;
            while(i<one)
            {
                nums.push_back(1);
                i++;
            }
            i=0;
            while(i<two)
            {
                nums.push_back(2);
                i++;
            }
}
