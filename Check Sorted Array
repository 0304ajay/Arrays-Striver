int isSorted(int n, vector<int> a) {
    // Write your code here.
    int flag=0;
    for(int i=0; i<a.size()-1; i++)
    {
        if(a[i]<=a[i+1])
        {
            continue;
        }
        else{
            return 0;
        }
    }
    return 1;
}
